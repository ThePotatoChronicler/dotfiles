{   "languageserver": {
        "haskell": {
            "command": "haskell-language-server-wrapper",
            "args": ["--lsp"],
            "rootPatterns": ["*.cabal", "stack.yaml", "cabal.project", "package.yaml", "hie.yaml"],
            "filetypes": ["haskell", "lhaskell"]
        },
        "haxe": {
            "command": "haxe-language-server",
            "filetypes": ["haxe"],
            "trace.server": "verbose",
            "initializationOptions": {
                "displayArguments": ["build.hxml"]
            },
            "settings": {
                "haxe.executable": "haxe"
            }
        },
        "zig": {
            "command": "zls",
            "filetypes": ["zig"],
            "rootPatterns": ["build.zig"]
        },
        "nix": {
            "command": "rnix-lsp",
            "filetypes": [
                "nix"
            ]
        },
        "erlang": {
            "command": "erlang_ls",
            "filetypes": [
                "erlang"
            ]
        },
        "astro": {
            "command": "astro-ls",
            "args": ["--stdio"],
            "rootPatterns": ["package.json"],
            "filetypes": [
                "astro"
            ],
            "initializationOptions": {
                "typescript": {
                    "serverPath": "typescript/lib/tsserverlibrary.js"
                },
                "environment": "node"
            }
        },
        "racket": {
            "command": "racket",
            "args": ["-l", "racket-langserver"],
            "filetypes": [
                "racket",
                "slideshow",
                "scribble"
            ]
        },
        "ocaml": {
            "command": "ocamllsp",
            "rootPatterns": [
                "dune-project"
            ],
            "filetypes": [
                "ocaml",
                "opam",
                "dune"
            ]
        },
        "v": {
            "command": "v",
            "args": ["ls"],
            "filetypes": [
                "vlang"
            ]
        },
        "cmake": {
            "command": "cmake-language-server",
            "filetypes": [
                "cmake"
            ]
        },
        "nim": {
            "command": "nimlsp",
            "filetypes": [
                "nim"
            ]
        }
    },

    "lua.checkForUpdates": "disabled",

    "clangd.disableSnippetCompletion": true,

    "javascript.suggestionActions.enabled": false,
    "typescript.suggestionActions.enabled": false,

    "javascript.format.semicolons": "insert",
    "typescript.format.semicolons": "insert",

    "javascript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": true,
    "typescript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": true,

    "jedi.enable": true,
    "jedi.markupKindPreferred": "markdown",
    "jedi.trace.server": "off",
    "jedi.jediSettings.autoImportModules": [],
    "jedi.executable.command": "jedi-language-server",
    "jedi.codeAction.nameExtractFunction": "jls_extract_def",
    "jedi.codeAction.nameExtractVariable": "jls_extract_var",
    "jedi.completion.disableSnippets": false,
    "jedi.completion.resolveEagerly": false,
    "jedi.jediSettings.caseInsensitiveCompletion": true,
    "jedi.workspace.extraPaths": [],
    "jedi.workspace.symbols.maxSymbols": 20,
    "jedi.workspace.symbols.ignoreFolders": [
        ".nox",
        ".tox",
        ".venv",
        "__pycache__",
        "venv"
    ],
    "svelte.enable-ts-plugin": true,
    "java.completion.filteredTypes": [],

    "julia.executablePath": "/usr/bin/julia",

    "powershell.integratedConsole.showOnStartup": false,

    "xml.java.home": "/usr/lib/jvm/java-17-graalvm"
}
